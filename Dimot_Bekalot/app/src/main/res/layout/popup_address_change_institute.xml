<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="70dp"
    android:layout_marginTop="250dp"
    android:layout_marginRight="70dp"
    android:background="@color/White">

    <TextView
        android:text="אנא כתבו כאן את הטקסט אשר תרצו לעדכן;"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="20dp"/>


    <EditText
        android:id="@+id/data_city"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="שם העיר"
        android:background="@color/White"
        android:textSize="30dp"/>

    <EditText
        android:id="@+id/data_street"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="שם הרחוב"
        android:background="@color/White"
        android:textSize="30dp"/>

    <EditText
        android:id="@+id/data_number_house"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="מספר הבית"
        android:background="@color/White"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/yes_update_address"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="עדכן"
        android:textColor="@color/White"
        android:textSize="25dp"/>

</LinearLayout>