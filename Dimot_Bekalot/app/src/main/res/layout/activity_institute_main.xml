<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstituteActivity.InstituteMain">

    <include android:id="@+id/include" layout="@layout/toolbar" />

    <TextView
        android:id="@+id/welcome_institute"
        android:layout_width="243dp"
        android:layout_height="75dp"
        android:text="ברוך הבא מכון"
        android:textSize="36sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="108dp" />

    <TextView
        android:id="@+id/name_institute"
        android:layout_width="300sp"
        android:layout_height="80sp"
        android:text=""
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="@+id/welcome_institute"
        app:layout_constraintStart_toStartOf="@+id/welcome_institute"
        app:layout_constraintTop_toBottomOf="@+id/welcome_institute"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/watch_queue"
        android:layout_width="197dp"
        android:layout_height="90dp"
        android:text="צפיה בתורים"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="334dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/update_queue"
        android:layout_width="197dp"
        android:layout_height="90dp"
        android:layout_marginTop="48dp"
        android:text="עדכון תורים"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/watch_queue"
        app:layout_constraintEnd_toEndOf="@+id/watch_queue"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/watch_queue"
        app:layout_constraintTop_toBottomOf="@+id/watch_queue"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/instData"
        android:layout_width="107dp"
        android:layout_height="62dp"
        android:text="איזור אישי"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="618dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
