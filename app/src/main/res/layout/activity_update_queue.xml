<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstituteActivity.UpdateQueueActivity">


    <include android:id="@+id/include" layout="@layout/toolbar" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="הוספת תורים"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.147" />

    <TextView
        android:id="@+id/treatment_type"
        android:layout_width="109dp"
        android:layout_height="36dp"
        android:text="סוג טיפול"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="283dp"
        tools:layout_editor_absoluteY="191dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/treatment_type_input"
        android:layout_width="216dp"
        android:layout_height="46dp"
        app:layout_constraintEnd_toEndOf="@+id/treatment_type"
        app:layout_constraintStart_toStartOf="@+id/treatment_type"
        tools:layout_editor_absoluteY="238dp"
        app:layout_constraintHorizontal_bias="1.0"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="376dp"
        android:text="תעודת זהות הלקוח"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="237dp" />

    <EditText
        android:id="@+id/id_input"
        android:layout_width="216dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/user_id"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/user_id"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="365dp" />



    <TextView
        android:id="@+id/date"
        android:layout_width="70dp"
        android:layout_height="37dp"
        android:text="תאריך"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="322dp"
        tools:layout_editor_absoluteY="455dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/date_input"
        android:layout_width="137dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="@+id/date"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/date"
        tools:layout_editor_absoluteY="506dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/hour"
        android:layout_width="53dp"
        android:layout_height="37dp"
        android:text="שעה"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="455dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/hour_input"
        android:layout_width="137dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintEnd_toEndOf="@+id/hour"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/hour"
        tools:layout_editor_absoluteY="506dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/adding"
        android:layout_width="125dp"
        android:layout_height="67dp"
        android:text="הוספה"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="605dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>