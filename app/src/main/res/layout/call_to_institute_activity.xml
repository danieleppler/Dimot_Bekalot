<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pale_blue_background"
    tools:context=".connectActivities.Call_To_Institute_Activity">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/dropdown_menu_instituties"
        android:layout_width="313dp"
        android:layout_height="66dp"
        android:background="@drawable/style_sppiner_dropdown"
        android:dropDownSelector="@color/black"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.33" />

    <TextView
        android:id="@+id/connect_activity_chooser_text"
        android:layout_width="380dp"
        android:layout_height="52dp"
        android:text="בחרו את המכון הרצוי להתקשרות :"
        android:textSize="27dp"
        app:layout_constraintBottom_toTopOf="@+id/dropdown_menu_instituties"
        app:layout_constraintEnd_toEndOf="@+id/dropdown_menu_instituties"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/dropdown_menu_instituties"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintVertical_bias="0.437" />

    <ImageView
        android:id="@+id/connect_image_icon"
        android:layout_width="273dp"
        android:layout_height="258dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dropdown_menu_instituties"
        app:srcCompat="@drawable/customer_service_cartoon_call_center_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>