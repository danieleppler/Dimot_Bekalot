<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pale_blue_background"
    tools:context=".InstituteActivity.InstituteMain">

    <include android:id="@+id/include" layout="@layout/toolbar" />

    <TextView
        android:id="@+id/welcome_institute"
        android:layout_width="244dp"
        android:layout_height="69dp"
        android:text="ברוך הבא מכון"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.169"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/name_institute"
        android:layout_width="300sp"
        android:layout_height="80sp"
        android:text=""
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/watch_queue"
        app:layout_constraintEnd_toEndOf="@+id/welcome_institute"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="@+id/welcome_institute"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintVertical_bias="0.668"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/watch_queue"
        android:layout_width="197dp"
        android:layout_height="90dp"
        android:text="צפיה בתורים"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/update_queue"
        android:layout_width="197dp"
        android:layout_height="90dp"
        android:layout_marginTop="48dp"
        android:text="עדכון תורים"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/instData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/watch_queue"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/instData"
        android:layout_width="107dp"
        android:layout_height="62dp"
        android:text="איזור אישי"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.91"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
